@model Roulette.Models.CheckModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Check</title>
    <link href="/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script type="text/javascript" charset="utf-8">
        $(function () {
            $(".printCheck .chip").each(function () {
                console.log($(this).css("top"));
                $(this).css("top", parseInt($(this).css("top"), 10) - 2.5).css("left", parseInt($(this).css("left"), 10) - 2.5);
            });
        });
    </script>
</head>
<body style="background-color: #FFFFFF; -webkit-print-color-adjust:exact;">
 <div class="printCheck">
  <div id="check-centered-div">
   @Html.Raw(Model.CurrentStake)
  </div>

  <table class="checkTable" >
    <tr>
        <td style="width: 100px;">Номер контракта</td>
        <td style="width: 100px;">@Model.ContractNumber</td>
    </tr>
    <tr>
        <td style="width: 100px;">Дата и время</td>
        <td style="width: 100px;">@Model.CreateDate.ToString("dd.MM.yy HH:mm:ss")</td>
    </tr>
     <tr>
        <td style="width: 100px;">Возможный выигрыш</td>
        <td style="width: 100px;">@Model.WinningString = @Model.Winning </td>
    </tr>
    <tr>
        <td style="width: 100px;">Сумма контракта</td>
        <td style="width: 100px;">@Model.Sum</td> 
    </tr>
    <tr><td colspan="2"><img style="margin-left: 20px;" src='@Url.Action("Barcode", new { code = Model.ContractNumber })'></td></tr>
  
  </table>
 </div>
</body>
</html>
